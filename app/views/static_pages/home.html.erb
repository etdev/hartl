  <% if signed_in? %>
    <div class="main-content">
      <div class="row">
        <aside class="span4">
          <section>
            <%= render 'shared/user_info' %>
          </section>
          <section>
            <%= render 'shared/stats' %>
          </section>
          <section>
            <%= render 'shared/micropost_form' %>
          </section>
        </aside>

        <div class="span8 micropost-main">
          <h3 class="micropost-feed">Micropost Feed</h3>
          <%= render 'shared/feed' %>
        </div>

      </div>
    </div>
  <% else %>
    <div class="main-content-center">
      <div class="hero-unit">
      <div class="row">
        <div class="span12">
          <h1>Welcome to MicroBlogger</h1>

          <h2>
            A blogging app similar to <a href="http://twitter.com">Twitter</a>
          </h2>

          <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary center" %>
        </div>
      </div>
      </div>

    <% end %>
  </div>
